<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">


        <%- include('../partials/navbar.ejs') %>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
